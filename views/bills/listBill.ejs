<body>
  <div class="wrapper">
    <div class="app_container">
      <div class="grid">
        <div class="grid_row">
          <div class="grid_column-10">
            <div class="row d-inline">
              <div class="input-group">
                <div class="btn-group col-sm-4 col-md-2" style="background-color: #f5f5f5; margin-right: 8px">
                  <button type="button" class="btn">Tổng tiền</button>
                  <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
                    aria-expanded="false"></button>
                  <ul class="dropdown-menu">
                    <li>
                      <a class="dropdown-item" href="/bill/thapCao">Thấp - Cao</a>
                    </li>
                    <li>
                      <a class="dropdown-item" href="/bill/caoThap">Cao - Thấp</a>
                    </li>
                  </ul>
                </div>
                <div class="btn-group col-sm-4 col-md-2" style="background-color: #f5f5f5; margin-right: 8px">
                  <button type="button" class="btn">Trạng thái</button>
                  <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
                    aria-expanded="false"></button>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/bill/04">0 - 4</a></li>
                    <li><a class="dropdown-item" href="/bill/40">4 - 0</a></li>
                  </ul>
                </div>

                <div class="btn-group col-sm-4 col-md-2" style="background-color: #f5f5f5; margin-right: 8px">
                  <button type="button" class="btn">Thời gian</button>
                  <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
                    aria-expanded="false"></button>
                  <ul class="dropdown-menu">
                    <li>
                      <a class="dropdown-item" href="/bill/ganXa">Gần - Xa</a>
                    </li>
                    <li>
                      <a class="dropdown-item" href="/bill/xaGan">Xa - Gần</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <div>
              <table class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Tổng tiền</th>
                    <th scope="col">Thời gian</th>
                    <th scope="col">Giảm giá</th>
                    <th scope="col">Người mua</th>
                    <th scope="col">Thông tin nhận</th>
                    <th scope="col">Chi tiết</th>
                  </tr>
                </thead>
                <tbody>
                  <% listBill.forEach((row)=> { %>
                    <tr>
                      <td>
                        <% if ( row.status==1 ) { %>
                          <a href="status/<%= row._id  %>">
                            đã đặt hàng,<br />
                            chờ xác nhận
                          </a>
                          <% } else if ( row.status==2) {%>
                            <a href="status/<%= row._id  %>">
                              đã xác nhận,<br />
                              đang xử lí
                            </a>
                            <% } else if ( row.status==3) {%>
                              <a href="status/<%= row._id  %>"> đang vận chuyển </a>
                              <% } else if ( row.status==4) {%>
                                <a href="status/<%= row._id  %>">
                                  giao hàng thành công
                                </a>
                                <% } else if ( row.status==0) {%>
                                  <a href="status/<%= row._id  %>"> đã bị hủy </a>
                                  <% } %>
                      </td>
                      <td>
                        <%= row.real_price %>
                      </td>
                      <td>
                        <%= row.create_at %>
                      </td>
                      <td>
                        <%= row.id_discount.value %>
                      </td>
                      <td>
                        <%= row.id_user.username %>
                      </td>
                      <td>
                        <%= row.id_address.username %><br />
                          <%= row.id_address.phone %><br />
                            <%= row.id_address.location %>
                      </td>
                      <td>
                        <a href="/bills/chitiet/<%= row._id  %>">
                          <%= row.detail.length %> sản phẩm
                        </a>
                      </td>
                    </tr>

                    <% }) %>
                </tbody>
              </table>
            </div>
            <div class="d-inline p-2">
              Đang xem:<%= soluong %>/<%= soluong %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>